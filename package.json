{
  "name": "trillo",
  "version": "1.0.0",
  "description": "Trillo project",
  "scripts": {
    "compile:sass": "sass sass/main.scss css/style.css",
    "watch:sass": "sass --watch sass/main.scss:css/style.css",
    "serve": "browser-sync start --proxy 'trillo.local' --files 'css/*.css, *.html'",
    "dev": "concurrently \"npm run watch:sass\" \"npm run serve\""
  },
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "concurrently": "^9.0.0",
    "sass": "^1.93.2"
  }
}
